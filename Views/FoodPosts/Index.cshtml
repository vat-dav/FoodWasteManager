@model IEnumerable<FoodWasteManager.Models.FoodPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FoodPosts Made:</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 mt-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm d-flex flex-column" style="aspect-ratio: 1 / 1; max-width: 250px; margin: auto;">
                <div style="height: 50%; overflow: hidden;">
                    <img src="@Url.Content(item.FoodImage)" class="w-100 h-100" style="object-fit: cover;" alt="@item.FoodName" />
                </div>
                <div class="card-body d-flex flex-column p-2" style="overflow: hidden;">
                    <h6 class="card-title mb-1">@item.FoodName</h6>
                    <p class="mb-0 small">Qty: @item.FoodQuantity</p>
                    <p class="mb-0 small">Type: @item.FoodTypes.FoodTypeName</p>
                    <p class="mb-0 small">Price: $@item.FoodPrice</p>
                    <p class="mb-0 small">BB: @item.FoodBestBefore.ToShortDateString()</p>
                    <p class="mb-2 small">Posted: @item.DatePosted.ToString("g")</p>

                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-action="Apply" asp-route-id="@item.FoodPostId" class="btn btn-sm btn-outline-danger">Apply</a>

                        <a asp-action="Details" asp-route-id="@item.FoodPostId" class="btn btn-sm btn-outline-secondary">Details</a>

                    </div>
                </div>
            </div>
        </div>
    }
</div>


