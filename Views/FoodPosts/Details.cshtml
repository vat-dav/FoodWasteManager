    @model FoodWasteManager.Models.FoodPost

    @{
        ViewData["Title"] = "Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>FoodPost Details:</h1>

    <div>
        <h4>FoodPost</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FoodImage)
            </dt>
         <dd class = "col-sm-10">
            <img src="@Url.Content(Model.FoodImage)" class="w-100 h-100 card-img-top" style="max-width: 25%" alt="@Model.FoodName" />
            </dd>
           
        <dt class = "col-sm-2"> 
                @Html.DisplayNameFor(model => model.FoodName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FoodName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FoodQuantity)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FoodQuantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FoodTypes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FoodTypes.FoodTypeName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FoodPrice)
            </dt>
            <dd class = "col-sm-10">
                $@Html.DisplayFor(model => model.FoodPrice)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FoodBestBefore)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FoodBestBefore)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DatePosted)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DatePosted)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.FoodPostId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
