@model FoodWasteManager.Models.FoodPost

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit a FoodPost</h1>

<h4>FoodPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodPostId" />
            <div class="form-group">
                <label asp-for="FoodImage" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodQuantity" class="control-label"></label>
                <input asp-for="FoodQuantity" class="form-control" />
                <span asp-validation-for="FoodQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodTypeId" class="control-label"></label>
                <select asp-for="FoodTypeId" class="form-control" asp-items="ViewBag.FoodTypeId"></select>
            </div>

            <div class="form-group">
                <label asp-for="FoodPrice" class="control-label"></label>
                <input asp-for="FoodPrice" class="form-control" />
                <span asp-validation-for="FoodPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodQuantity" class="control-label"></label>
                <input asp-for="FoodQuantity" class="form-control" />
                <span asp-validation-for="FoodQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodBestBefore" class="control-label"></label>
                <input asp-for="FoodBestBefore" class="form-control" />
                <span asp-validation-for="FoodBestBefore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" class="control-label"></label>
                <input asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
