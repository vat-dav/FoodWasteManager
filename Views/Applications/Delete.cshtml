@model FoodWasteManager.Models.Application

@{
    ViewData["Title"] = "Delete Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-start" style="min-height: 80vh; background-color: #f0ede6; padding: 2rem;">
    <div class="w-100" style="max-width: 650px;">
        <h1 class="mb-3 text-center" style="color:#3d5438;">Delete This Application?</h1>
        <h5 class="text-center mb-4" style="color:#3d5438;">Are you sure you want to remove this request?</h5>

        <div class="p-4 rounded-4 shadow" style="background-color:#d0f2b6;">
            <div class="text-center mb-4">
                <img src="@Url.Content(Model.FoodPost.FoodImage)" alt="@Model.FoodPost.FoodName" class="img-fluid rounded" style="max-width: 300px;" />
            </div>

            <dl class="row">
                <dt class="col-sm-4" style="color:#3d5438;">Food Post</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FoodPost.FoodName)</dd>

                <dt class="col-sm-4" style="color:#3d5438;">Quantity Required</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.QuantityRequired)</dd>

                <dt class="col-sm-4" style="color:#3d5438;">Earliest Pickup</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EarliestPickup)</dd>

                <dt class="col-sm-4" style="color:#3d5438;">Latest Pickup</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LatestPickup)</dd>

                <dt class="col-sm-4" style="color:#3d5438;">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AStatus)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-center">
                <input type="hidden" asp-for="ApplicationId" />

                <button type="submit" class="btn btn-danger fw-semibold me-3" style="min-width: 120px;">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary" style="color:#3d5438; border-color:#3d5438; min-width: 120px;">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
