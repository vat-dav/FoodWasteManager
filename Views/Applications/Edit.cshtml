@model FoodWasteManager.Models.Application

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationId" />
            <div class="form-group">
                <label asp-for="FoodPostId" class="control-label"></label>
                <select asp-for="FoodPostId" class="form-control" asp-items="ViewBag.FoodPostId"></select>
                <span asp-validation-for="FoodPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EarliestPickup" class="control-label"></label>
                <input asp-for="EarliestPickup" class="form-control" />
                <span asp-validation-for="EarliestPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatestPickup" class="control-label"></label>
                <input asp-for="LatestPickup" class="form-control" />
                <span asp-validation-for="LatestPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AStatus" class="control-label"></label>
                <select asp-for="AStatus" class="form-control">
                    <!--adds a default option of Please Select-->
                    <option value="">--- Please Select ---</option>
                    @foreach (var value in Enum.GetValues(typeof(Application.ApplicationStatus)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>

                <span asp-validation-for="AStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
