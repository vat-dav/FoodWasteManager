@model IEnumerable<FoodWasteManager.Models.OrgHour>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrgHourId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrgHourId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrgHourId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
