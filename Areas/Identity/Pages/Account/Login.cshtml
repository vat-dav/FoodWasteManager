@page
@model LoginModel

@{
    ViewData["Title"] = "Log back in";
}

<h1 class="text-center mb-5" style="color:#3d5438"> @ViewData["Title"]!</h1>
<div class="container vh-80 d-flex justify-content-center align-items-center">
    <div class="col-md-7">

        <div class="justify-content-center">
        <section>
            <form id="account" method="post">
                    <h2 class="justify-content center align-items-center" style="color:#3d5438">Welcome back!</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" id="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" onclick="showPass()"> Show Password
                    <script>
                        function showPass() {
                            var pass = document.getElementById("password")

                            if (pass.type === "password") {
                                pass.type = "text";
                            }
                            else if (pass.type === "text") {
                                pass.type = "password";
                            }
                        }
                    </script>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg mb-5" style="background-color:#d0f2b6">


                            <h4 style="color: #3d5438">Log in</h4>
                            
</button
>
                </div>
                    <div class="mb-4">
                        <h5>
                            <a id="forgot-password" asp-page="./ForgotPassword" style="color:#3d5438">Forgot your password?</a>
                    </h5>
                    <h5> 
                            <a asp-page="./Register" style="color:#3d5438" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </h5>
                    <h5>
                            <a id="resend-confirmation" style="color:#3d5438" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </h5>
                </div>
            </form>
        </section>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
